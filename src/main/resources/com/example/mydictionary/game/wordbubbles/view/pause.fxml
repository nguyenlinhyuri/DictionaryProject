<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #3C88AA;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mydictionary.game.wordbubbles.PauseController">
   <children>
      <Label alignment="CENTER" prefHeight="50.0" prefWidth="120.0" style="-fx-background-color: #B9E3FB; -fx-font-family: cambria; -fx-text-fill: #3382A1; -fx-font-weight: bold;" text="PAUSE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button id="button" fx:id="resumeButton" layoutX="336.0" layoutY="204.0" mnemonicParsing="false" onAction="#resumeGame" prefHeight="58.0" prefWidth="268.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20; -fx-background-color: rgba(255, 255, 255, 0.8);" stylesheets="@../../../css/style.css" text="  Resume                           ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="28.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/resume.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="button" fx:id="restartButton" layoutX="336.0" layoutY="271.0" mnemonicParsing="false" onAction="#restartGame" prefHeight="58.0" prefWidth="268.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20; -fx-background-color: rgba(255, 255, 255, 0.8);" stylesheets="@../../../css/style.css" text="  Restart                            ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="28.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/restart.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button id="button" fx:id="quitButton" layoutX="336.0" layoutY="337.0" mnemonicParsing="false" onAction="#quitGame" prefHeight="58.0" prefWidth="268.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20; -fx-background-color: rgba(255, 255, 255, 0.8);" stylesheets="@../../../css/style.css" text="  Quit                                ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/quit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
