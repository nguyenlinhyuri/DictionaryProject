            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="resumeButton" layoutX="291.0" layoutY="161.0" mnemonicParsing="false" onAction="#resumeGame" prefHeight="50.0" prefWidth="226.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20;" text="  Resume                    ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="28.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/resume.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="restartButton" layoutX="291.0" layoutY="218.0" mnemonicParsing="false" onAction="#restartGame" prefHeight="50.0" prefWidth="226.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20;" text="  Restart                     ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="28.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/restart.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Button fx:id="quitButton" layoutX="291.0" layoutY="277.0" mnemonicParsing="false" onAction="#quitGame" prefHeight="50.0" prefWidth="226.0" style="-fx-font-family: cambria; -fx-font-size: 20; -fx-background-radius: 20;" text="  Quit                         ">
         <font>
            <Font size="16.0" />
         </font>
         <graphic>
            <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/quit.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
   </children>
</AnchorPane>
