         <font>
            <Font size="20.0" />
         </font>
         <graphic>
            <ImageView fitHeight="23.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/pause.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <Label fx:id="wordLabel" layoutX="662.0" layoutY="15.0" prefHeight="39.0" prefWidth="150.0" style="-fx-background-color: #EF75D5; -fx-font-family: cambria; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text=" Words  0 of 12">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="pointLabel" layoutX="662.0" layoutY="57.0" prefHeight="39.0" prefWidth="150.0" style="-fx-background-color: #EF75D5; -fx-font-family: cambria; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text=" Points">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="hintButton" layoutX="16.0" layoutY="76.0" mnemonicParsing="false" onAction="#hintWord" prefHeight="50.0" prefWidth="120.0" style="-fx-font-family: cambria; -fx-font-weight: bold; -fx-background-radius: 20; -fx-font-size: 20;" text="  Hint">
