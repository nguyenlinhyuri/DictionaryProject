<AnchorPane fx:id="anchorPane" prefHeight="466.0" prefWidth="809.0" style="-fx-background-color: #863FA8;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mydictionary.game.wordsnatchers.Play">
   <children>
      <FlowPane fx:id="flowPaneResult" alignment="TOP_CENTER" hgap="5.0" layoutX="223.0" layoutY="196.0" prefHeight="100.0" prefWidth="350.0" vgap="5.0" />
      <TextArea fx:id="explainTextArea" layoutX="223.0" layoutY="57.0" prefHeight="130.0" prefWidth="350.0" style="-fx-border-color: transparent; -fx-font-family: cambria; -fx-font-size: 20;" />
      <ProgressBar fx:id="timeProgressBar" layoutX="223.0" layoutY="25.0" prefHeight="22.0" prefWidth="350.0" progress="0.0" />
