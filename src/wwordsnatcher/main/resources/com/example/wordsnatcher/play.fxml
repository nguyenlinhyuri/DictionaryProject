   <children>
      <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseGame" prefHeight="50.0" prefWidth="120.0" text="Pause">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <Label fx:id="pointLabel" layoutX="674.0" layoutY="36.0" prefHeight="50.0" prefWidth="140.0" text="Point">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Label fx:id="wordLabel" layoutX="674.0" prefHeight="50.0" prefWidth="140.0" text="Word  0 of 12">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <Button fx:id="hintButton" layoutX="365.0" layoutY="469.0" mnemonicParsing="false" onAction="#hintWord" prefHeight="34.0" prefWidth="85.0" text="Hint">
         <font>
            <Font size="16.0" />
         </font>
      </Button>
      <FlowPane fx:id="flowPaneResult" alignment="TOP_CENTER" layoutX="223.0" layoutY="179.0" prefHeight="100.0" prefWidth="350.0" />
      <TextArea fx:id="explainTextArea" layoutX="223.0" layoutY="57.0" prefHeight="110.0" prefWidth="350.0" />
